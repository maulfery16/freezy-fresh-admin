{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module",
		"allowImportExportEverywhere": true
	},
	"plugins": ["react", "react-hooks"],
	"rules": {
		"react/prop-types": 0
	},
	"overrides": [
		{
			"files": ["**/*.js"],
			"rules": {
				"react-hooks/exhaustive-deps": "off"
			}
		}
	]
}
